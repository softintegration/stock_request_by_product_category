<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="stock_request_form_view_inherited" model="ir.ui.view">
            <field name="name">stock.request.form.view.inherited</field>
            <field name="model">stock.request</field>
            <field name="inherit_id" ref="stock_request.stock_request_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <field name="transfer_by_product_categ" invisible="1"/>
                    <field name="categ_id" options="{'no_create':True}"
                           attrs="{'invisible':[('transfer_by_product_categ','=',False)],'required':[('transfer_by_product_categ','=',True)]}"/>
                </xpath>
                <xpath expr="//field[@name='move_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="transfer_by_product_categ" invisible="1"/>
                </xpath>
            </field>
        </record>



</odoo>
